{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/medf-v0.1-minimal.schema.json",
  "title": "MeDF Minimal v0.1",
  "description": "Minimal MeDF structure for tracking document existence and history",
  "type": "object",
  "required": ["medf_version", "document", "intent", "timestamp"],
  "properties": {
    "medf_version": {
      "type": "string",
      "description": "MeDF format version"
    },
    "document": {
      "type": "object",
      "required": ["content_hash"],
      "properties": {
        "title": {
          "type": "string",
          "description": "Document title"
        },
        "content_hash": {
          "type": "string",
          "description": "Content hash (e.g., sha256:...)"
        },
        "content_type": {
          "type": "string",
          "description": "Content MIME type"
        },
        "source": {
          "type": "string",
          "description": "Content location (URI or local path)"
        }
      }
    },
    "intent": {
      "type": "object",
      "properties": {
        "author": {
          "type": "string",
          "description": "Document author"
        },
        "description": {
          "type": "string",
          "description": "Why this document exists"
        }
      }
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp in ISO 8601 format"
    },
    "previous": {
      "type": ["string", "null"],
      "description": "Previous version hash (null for initial version)"
    }
  }
}
